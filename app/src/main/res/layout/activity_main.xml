<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/colocationsFragment"
        class="com.example.collocation_view_fragment.CollocationsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></fragment>

    <fragment
        android:id="@+id/partOfSpeechFragment"
        class="com.example.collocation_view_fragment.part_of_speech.PartOfSpeechFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></fragment>

    <fragment
        android:id="@+id/sentencesFragment"
        class="com.anddev404.sentences_view.SentencesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></fragment>

    <Button
        android:id="@+id/changeCollocationButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="change">

    </Button>


</LinearLayout>